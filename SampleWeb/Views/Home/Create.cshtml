
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<div class="container">
    <form class="form-horizontal" action="/home/create" method="post">
        <div class="form-group">
            <label for="lblEntityName">Entity Name</label>
            <input type="text" class="form-control" id="EntityName" name="EntityName" placeholder="Name goes here!">
        </div>
        <div class="form-group">
            <label for="lblTaxNumber">Tax Number</label>
            <input type="text" class="form-control" id="TaxNumber" name="TaxNumber" placeholder="Fake Tax # goes here!">
        </div>

        <div class="form-group">
            <label for="lblType">Type</label>
            <select id="AccountType" name="AccountType">
                <option value="0">Individual</option>
                <option value="1">Business</option>
            </select>
        </div>
       
        <button type="submit" class="btn btn-success">Submit</button>
    </form>
    
</div>