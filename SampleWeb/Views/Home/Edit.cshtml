@model  SampleWeb.Controllers.AccountAddressDTO
@{
    ViewBag.Title = "Edit Mailing Address";
}

<h2>Edit Mailing Address</h2>

<div class="container">
    <form class="form-horizontal" action="/home/edit" method="post">
        <div class="form-group">
            <label for="lblStreet1">Street Address 1</label>
            <input type="text" class="form-control" id="StreetAddress1" name="StreetAddress1" value="@Model.StreetAddress1">
        </div>
        <div class="form-group">
            <label for="lblStreet2">Street Address 2</label>
            <input type="text" class="form-control" id="StreetAddress2" name="StreetAddress2" value="@Model.StreetAddress2">
        </div>
        <div class="form-group">
            <label for="lblCity">City</label>
            <input type="text" class="form-control" id="CityTownVilla" name="CityTownVilla" value="@Model.CityTownVilla">
        </div>
        <div class="form-group">
            <label for="lblState">State</label>
            <input type="text" class="form-control" id="StateProvinceTerritory" name="StateProvinceTerritory" value="@Model.StateProvinceTerritory">
        </div>
        <div class="form-group">
            <label for="lblZip">Zip</label>
            <input type="text" class="form-control" id="PostalCode" name="PostalCode" value="@Model.PostalCode">
        </div>
        <input type="hidden" id="AccountId" name="AccountId" value="@Model.AccountId"/>
        
       
        <button type="submit" class="btn btn-success">Submit</button>
    </form>
    
</div>