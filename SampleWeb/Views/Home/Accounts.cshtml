@model  List<Domain.Account>
@{
    ViewBag.Title = "Accounts";
}

<h2>Accounts</h2>

@if (Model.Count == 0)
{
    <p>No accounts found</p>
    <p><a class="btn btn-success" href="/home/Create">Create</a></p>
}
<ul>

    @foreach(var acc in Model)
    {
        <li><a href="/home/edit/@acc.AccountId">@acc.TaxNumber</a> - @acc.EntityName (@acc.MailingAddress)</li>
    }

    <p><a class="btn btn-success" href="/home/Create">Create</a></p>
</ul>
